  "type": "module",
  "license": "MIT",
  "author": "Typewise AG",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Typewise/mcp-chaos-rig.git"
  },
  "homepage": "https://github.com/Typewise/mcp-chaos-rig",
  "bugs": {
    "url": "https://github.com/Typewise/mcp-chaos-rig/issues"
  },
